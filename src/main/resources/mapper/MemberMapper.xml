<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.billyeogayu.mapper.MemberMapper">

    <!-- Result Map -->
    <resultMap id="memberResultMap" type="com.billyeogayu.domain.Member">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="email" column="email"/>
        <result property="name" column="name"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- 회원 목록 조회 -->
    <select id="findAll" resultMap="memberResultMap">
        SELECT 
            id,
            username,
            email,
            name,
            created_at,
            updated_at
        FROM members
        ORDER BY created_at DESC
    </select>

    <!-- ID로 회원 조회 -->
    <select id="findById" parameterType="long" resultMap="memberResultMap">
        SELECT 
            id,
            username,
            email,
            name,
            created_at,
            updated_at
        FROM members
        WHERE id = #{id}
    </select>

    <!-- 사용자명으로 회원 조회 -->
    <select id="findByUsername" parameterType="string" resultMap="memberResultMap">
        SELECT 
            id,
            username,
            email,
            name,
            created_at,
            updated_at
        FROM members
        WHERE username = #{username}
    </select>

    <!-- 회원 등록 -->
    <insert id="insert" parameterType="com.billyeogayu.domain.Member" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO members (
            username,
            email,
            name,
            created_at,
            updated_at
        ) VALUES (
            #{username},
            #{email},
            #{name},
            SYSDATE,
            SYSDATE
        )
    </insert>

    <!-- 회원 정보 수정 -->
    <update id="update" parameterType="com.billyeogayu.domain.Member">
        UPDATE members
        SET 
            username = #{username},
            email = #{email},
            name = #{name},
            updated_at = SYSDATE
        WHERE id = #{id}
    </update>

    <!-- 회원 삭제 -->
    <delete id="deleteById" parameterType="long">
        DELETE FROM members
        WHERE id = #{id}
    </delete>

    <!-- 현재 시간 조회 (DB 연결 테스트용) -->
    <select id="getCurrentTime" resultType="string">
        SELECT TO_CHAR(SYSDATE, 'YYYY-MM-DD HH24:MI:SS') FROM DUAL
    </select>

</mapper>