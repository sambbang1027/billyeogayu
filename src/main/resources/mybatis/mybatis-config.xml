<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "https://mybatis.org/dtd/mybatis-3-config.dtd"> <!-- 최신 권장 URL 사용 -->
<configuration>
    <!-- Settings -->
    <settings>
        <!-- Map underscore to camelCase -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <!-- Enable lazy loading -->
        <setting name="lazyLoadingEnabled" value="true"/>
        <!-- Aggressive lazy loading disabled -->
        <setting name="aggressiveLazyLoading" value="false"/>
        <!-- Multiple result sets enabled -->
        <setting name="multipleResultSetsEnabled" value="true"/>
        <!-- Use column label instead of column name -->
        <setting name="useColumnLabel" value="true"/>
        <!-- Use generated keys -->
        <setting name="useGeneratedKeys" value="true"/>
        <!-- Auto mapping behavior -->
        <setting name="autoMappingBehavior" value="PARTIAL"/>
        <!-- Auto mapping unknown column behavior -->
        <setting name="autoMappingUnknownColumnBehavior" value="WARNING"/>
        <!-- Default executor type -->
        <setting name="defaultExecutorType" value="SIMPLE"/>
        <!-- Default statement timeout -->
        <setting name="defaultStatementTimeout" value="25"/>
        <!-- Default fetch size -->
        <setting name="defaultFetchSize" value="100"/>
        <!-- Safe row bounds enabled -->
        <setting name="safeRowBoundsEnabled" value="false"/>
        <!-- Safe result handler enabled -->
        <setting name="safeResultHandlerEnabled" value="true"/>
        <!-- Local cache scope -->
        <setting name="localCacheScope" value="SESSION"/>
        <!-- Jdbc type for null -->
        <setting name="jdbcTypeForNull" value="OTHER"/>
        <!-- Lazy load trigger methods -->
        <setting name="lazyLoadTriggerMethods" value="equals,clone,hashCode,toString"/>
    </settings>

    <!-- Type Aliases -->
    <typeAliases>
        <package name="com.app.domain"/>
    </typeAliases>

</configuration>